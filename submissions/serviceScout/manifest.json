{
  "manifest_version": 3,
  "name": "Service Scout",
  "version": "1.0",
  "description": "Simple extension to manage server connectivity",
  "permissions": ["alarms", "activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "service-scout@example.com",
      "strict_min_version": "109.0"
    }
  }
}
